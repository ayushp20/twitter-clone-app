<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-user-plus"></i> Change Password</h1>
            <%- include ('./partials/messages.ejs') %>
            <form action="/users/changepassword?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="currentPassword">Current Password</label>
                    <input type="password" id="currentPassword" name="currentPassword" class="form-control"
                        placeholder="Current Password" />
                </div>
                <div class="form-group">
                    <label for="newPassword1">New Password</label>
                    <input type="password" id="newPassword1" name="newPassword1" class="form-control"
                        placeholder="New Password" />
                </div>
                <div class="form-group">
                    <label for="newPassword2">New Password</label>
                    <input type="password" id="newPassword2" name="newPassword2" class="form-control"
                        placeholder="Confirm Password" />
                </div>
                <button type="submit" class="btn btn-primary btn-block">
                    Update Password
                </button>
            </form>
        </div>
    </div>
</div>
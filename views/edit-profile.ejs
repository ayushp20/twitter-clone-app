<%- include ('./partials/header.ejs') %>
<div class="col-md-6 m-auto">
    <div class="card card-body text-center">
        <div class="card text-white bg-warning mb-3">
            <div class="card-header">
                <h1>Edit Profile</h1>
            </div>
            <div class="card-body">
                <h4 class="card-title">Welcome <%= user.name %></h4>
                <p class="card-text">Edit your profile information.</p>
            </div>
        </div>
    </div>
</div>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">Edit Profile</h1>
            <%- include ('./partials/messages.ejs') %>
            <form action="/users/<%= user._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
                        value="<%= typeof user.name != 'undefined' ? user.name : '' %>" />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                        value="<%= typeof user.email != 'undefined' ? user.email : '' %>" />
                </div>
                <div class="form-group">
                    <label for="password">Confirm your password</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Enter Password" />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Update</button>
            </form>
            <p class="lead mt-4"><a href="/users/changepassword">Change Password?</a></p>
        </div>
    </div>
</div>